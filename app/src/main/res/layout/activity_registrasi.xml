<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".intro.RegistrasiActivity">

    <ImageView
        android:layout_marginTop="5dp"
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:textSize="30dp"
        android:textColor="#015965"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="AL - MAWADDAH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  <LinearLayout
      android:layout_margin="20dp"
      android:gravity="center"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/anak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:drawablePadding="6dp"
            android:id="@+id/pengasuh"
            android:drawableStart="@drawable/person"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="Nama Panggil Pengasuh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/anak_lengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:drawablePadding="6dp"
            android:id="@+id/pengasuh_lengkap"
            android:drawableStart="@drawable/person"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="Nama Lengkap Pengasuh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:drawablePadding="6dp"
            android:id="@+id/username"
            android:drawableStart="@drawable/person"
            android:inputType="textEmailAddress"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:hint="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sandi"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <com.google.android.material.textfield.TextInputEditText
            android:drawablePadding="6dp"
            android:id="@+id/password"
            android:drawableStart="@drawable/password"
            android:inputType="textPassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/etRole"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp">

          <com.google.android.material.textfield.TextInputEditText
              android:drawablePadding="6dp"
              android:id="@+id/status"
              android:drawableStart="@drawable/person"
              android:hint="Status"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

      </com.google.android.material.textfield.TextInputLayout>
  </LinearLayout>


    <Button
        android:id="@+id/daftar"
        android:background="@drawable/button1"
        android:layout_marginTop="10dp"
        android:text="Daftar"
        android:layout_width="200dp"
        android:textColor="#ffff"
        android:layout_height="wrap_content" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/probar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>